pipeline {
    agent any

    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/Nalini359/my-first-git-project'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'python3 -m venv venv && . venv/bin/activate && pip install -r requirements.txt || echo "No requirements.txt found"'
            }
        }

        stage('Run Script') {
            steps {
                sh 'python3 app.py'
            }
        }

        // Optional later:
        // stage('Run Tests') {
        //     steps {
        //         sh 'pytest'
        //     }
        // }
    }
}

